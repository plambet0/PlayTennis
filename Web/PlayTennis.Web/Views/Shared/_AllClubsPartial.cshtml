@model AllClubsViewModel;

@{
    ViewBag.Title = "All Clubs";
}

<div class="row">
    @foreach (var club in Model.Clubs)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img class="card-img-top" src="@club.ImageUrl" alt="@club.Name @club.Town @club.Surface">
                <div class="card-body text-center">
                    <h2 class="card-title text-center font-weight-bold">@club.Name</h2>
                    <h5 class="card-title text-center">@club.Address</h5>
                    <h5 class="card-title text-center">Courts: @club.Courts Surface: @club.Surface</h5>
                    <h5 class="card-title text-center">@club.PricePerHour lv./hour</h5>
                    @if (!this.User.IsInRole(GlobalConstants.AdministratorRoleName))
                    {
                    <a asp-controller="Club" asp-action="Details" asp-route-id="@club.Id" class="btn btn-primary">RESERVE COURT</a>
                    }
                    else 
                    { 
                <form method="post">
                    <button type="submit" class="btn btn-danger"
                            asp-area="" asp-controller="Club" asp-action="Delete" asp-route-id="@club.Id">
                        DELETE COURT
                    </button>
                </form>
                    }
                </div>
            </div>
        </div>
    }
</div>

<hr />
